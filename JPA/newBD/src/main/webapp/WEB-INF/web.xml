<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userContractServlet</servlet-name>
        <servlet-class>controllers.user.UserContractServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userContractServlet</servlet-name>
        <url-pattern>/user/Contract</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NumberOperationsServlet</servlet-name>
        <servlet-class>controllers.user.NumberOperationsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NumberOperationsServlet</servlet-name>
        <url-pattern>/user/NumberOperations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TariffServlet</servlet-name>
        <servlet-class>controllers.user.TariffServlets</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TariffServlet</servlet-name>
        <url-pattern>/user/Tariffs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TariffOptionServlet</servlet-name>
        <servlet-class>controllers.user.TariffOptionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TariffOptionServlet</servlet-name>
        <url-pattern>/user/TariffOptions</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FindClientServlet</servlet-name>
        <servlet-class>controllers.admin.FindClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FindClientServlet</servlet-name>
        <url-pattern>/admin/FindClient</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/login</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
